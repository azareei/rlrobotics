#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Robot>:
    size: 20, 20
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<SignalFront>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size
<Signal2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Signal3>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<SignalBack>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size
<Signal5>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Signal6>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Goal>:
    size: 20,20
    canvas:
        Color:
            rgba: 0,1,0,0.3
        Ellipse:
            pos : self.pos
            size: self.size

<Game>:
    robot: game_robot
    signal1: game_ball1
    signal2: game_ball2
    signal3: game_ball3
    signal4: game_ball4
    signal5: game_ball5
    signal6: game_ball6
    goal: game_goal

    Robot:
        id: game_robot
        center: self.parent.center
    SignalFront:
        id: game_ball1
        center: self.parent.center
    SignalFront:
        id: game_ball2
        center: self.parent.center
    SignalFront:
        id: game_ball3
        center: self.parent.center
    SignalBack:
        id: game_ball4
        center: self.parent.center
    SignalBack:
        id: game_ball5
        center: self.parent.center
    SignalBack:
        id: game_ball6
        center: self.parent.center
    Goal:
        id: game_goal
        center: self.parent.center